{
  "compilerOptions": {
    "target": "ES2015",
    "lib": ["ES2020", "dom"],
    "allowUmdGlobalAccess": true,
    "strict": true,
    "moduleResolution": "node",
    "module": "ES2020",
    "skipLibCheck": true,
    "outDir": "./.build/src"
  },
  "include": ["./src/**/*"],
  "typeAcquisition": {
    "enable": true
  }
}
